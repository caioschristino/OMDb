<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeroTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_hero</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="HeadLineTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BodyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallBodyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="BoldSmallBodyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
